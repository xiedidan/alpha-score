# Binance Alpha 自动化交易工具 - 敏感配置示例文件
# 复制此文件为 secrets.yaml 并填入真实的密钥信息
# secrets.yaml 不会被提交到 Git 仓库

# 系统登录凭证
auth:
  username: "admin"                   # 系统管理员用户名
  password: "change_this_password"    # 系统管理员密码（强烈建议修改）

# 通知服务配置
notifications:
  # Discord 通知配置
  discord:
    webhook: "https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN"

  # Telegram 通知配置
  telegram:
    bot_token: "YOUR_BOT_TOKEN"       # 从 @BotFather 获取
    chat_id: "YOUR_CHAT_ID"           # 你的 Chat ID

  # 飞书通知配置
  feishu:
    webhook: "https://open.feishu.cn/open-apis/bot/v2/hook/YOUR_WEBHOOK_TOKEN"

  # PushPlus 通知配置
  pushplus:
    token: "YOUR_PUSHPLUS_TOKEN"      # 从 pushplus.plus 获取

# LLM API 配置
llm:
  # DeepSeek 配置
  deepseek:
    api_key: "YOUR_DEEPSEEK_API_KEY"
    base_url: "https://api.deepseek.com/v1"

  # Gemini 配置
  gemini:
    api_key: "YOUR_GEMINI_API_KEY"

  # Ollama 配置（本地部署无需 API Key）
  ollama:
    base_url: "http://localhost:11434"

# 币安 API 配置（如果需要通过 API 访问币安）
binance:
  api_key: "YOUR_BINANCE_API_KEY"     # 币安 API Key
  api_secret: "YOUR_BINANCE_API_SECRET"  # 币安 API Secret

# 数据库加密密钥（用于加密敏感数据）
encryption:
  secret_key: "YOUR_RANDOM_SECRET_KEY_AT_LEAST_32_CHARS"

# 注意事项：
# 1. 此文件包含敏感信息，切勿提交到 Git 仓库
# 2. 建议使用强密码和随机生成的密钥
# 3. 定期更换密钥和密码
# 4. 不使用的服务可以留空或删除对应配置
