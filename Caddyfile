# Alpha-Score Caddy 配置文件
# 生产环境反向代理配置

# 主站点配置
{
    # 全局选项
    admin off  # 关闭管理API（可选）
    # auto_https disable_redirects  # 开发测试时使用
}

# 如果有域名，替换 localhost 为你的域名
# 例如: alpha-score.yourdomain.com
localhost {
    # 自动HTTPS（如果使用域名）
    # tls your-email@example.com  # Let's Encrypt 邮箱
    
    # API 请求代理到后端
    reverse_proxy /api/* localhost:8000 {
        # 健康检查
        health_uri /health
        health_interval 10s
        health_timeout 5s
    }
    
    # WebSocket 支持
    reverse_proxy /ws/* localhost:8000 {
        header_up Upgrade {http.request.header.Upgrade}
        header_up Connection {http.request.header.Connection}
    }
    
    # 静态文件服务（Vue构建产物）
    root * /var/www/alpha-score/frontend/dist
    try_files {path} /index.html
    file_server
    
    # 日志
    log {
        output file /var/log/caddy/alpha-score.log
        level INFO
    }
    
    # 安全头
    header {
        # 启用HSTS
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        # 防止点击劫持
        X-Frame-Options "SAMEORIGIN"
        # 防止MIME类型嗅探
        X-Content-Type-Options "nosniff"
        # XSS保护
        X-XSS-Protection "1; mode=block"
        # 内容安全策略
        Content-Security-Policy "default-src 'self'"
    }
    
    # Gzip压缩
    encode gzip zstd
}

# 可选：HTTP重定向到HTTPS（生产环境使用）
# http://alpha-score.yourdomain.com {
#     redir https://{host}{uri} permanent
# }
